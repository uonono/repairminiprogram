/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.back-icon .van-icon-arrow-left:before {
  font-size: 36rpx;
  color: #fff;
}

.arrow .van-icon-arrow:before {
  font-size: 36rpx;
}

.tag-bottom button {
  padding: 36rpx 0rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 36rpx;
  color: #969799;
  opacity: 1;
  border-right:2rpx solid #e8e8e8;
  border-radius: 0;
  background: #fff;
  cursor: pointer;
  width: 100%;
}

.tag-bottom button::after {
  border-right: 2rpx solid !important;
  border-radius: 0;
  border: none;
  content:none !important;
}

.tag-view button {
  font-size: 36rpx;
  padding: 0rpx 12rpx;
  font-family: PingFang SC;
  line-height: 50rpx;
  display: inline-block;
  color: #969799;
  border: 1px solid #e8e8e8;
  border-radius: 6rpx;
  margin-bottom: 46rpx;
  margin-left: 0;
  margin-right: 0;
}

.tag-out-view input {
  flex: 1;
  margin-right: 20rpx !important;
  background: #F5F6F8;
  opacity: 1;
  font-size: 14px;
  padding: 12rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 18px;
  color: #414141;
  opacity: 1;
}

.tag-button button {
  position: relative;
  overflow: inherit;
}
.tag-button button::after{
  content:none !important;
}

.tag-button text {
  position: absolute;
  top: 0;
  right: 0;
  box-sizing: border-box;
  min-width: 32rpx;
  padding: 0 6rpx;
  color: #fff;
  font-weight: 500;
  font-size: 24rpx;
  font-family: -apple-system-font, Helvetica Neue, Arial, sans-serif;
  line-height: 1.4;
  text-align: center;
  background-color: #ee0a24;
  border: 1px solid #fff;
  border-radius: 32rpx;
  -webkit-transform: translate(50%, -50%);
  transform: translate(50%, -50%);
  -webkit-transform-origin: 100%;
  transform-origin: 100%;
}
.navbar-action_item image {
  width: 26rpx;
  height: 30rpx;
}
.van-toast{
  text-align: center;
}