/* pages/my/profile/index.wxss */
page {
  background: #f2f2f2;
  position: relative;
}

.general-int-view {
  margin-bottom: 24rpx;
}

.picker-title-first .van-cell {
  padding: 36rpx 34rpx !important;
  margin-bottom: 12rpx;
}

.picker-title-last .van-cell {
  padding: 22rpx 34rpx 40rpx 34rpx !important;
}

.picker-title .van-cell {
  padding: 22rpx 32rpx;
  background: inherit;
}

.picker-title .van-cell__title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #1F1F1F;
}

.picker-title .van-cell__value {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  line-height: 1.5;
}

.general-out-view {
  margin: 30rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
}

.general-out-view .picker-title image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.picker-icon {
  display: flex;
  align-items: center;
  height: 100%;
  font-size: 24rpx;
  flex-wrap: wrap;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  justify-content: flex-end;
  line-height: 36rpx;
}

.picker-icon .van-icon {
  margin-left: 44rpx;
}

.picker-icon .van-icon:before {
  font-size: 36rpx;
}

.map-button .disable {
  background: #D8D8D8 !important;
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(168, 168, 168, 0.51) !important;
  border-radius: 36rpx;
}

.map-button {
  width: 100%;
  margin-bottom: 32rpx;
}

.map-button button {
  width: 90% !important;
  background: linear-gradient(141deg, #1FD7A5 0%, #00B9A9 100%);
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(168, 168, 168, 0.51);
  border-radius: 36rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  line-height: 42rpx;
  padding: 22rpx 0rpx;
  margin-top: 38rpx;
}

.solt-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #1F1F1F;
}

.solt-title button {
  background: #04C6A6;
  border-radius: 6rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 36rpx;
  margin-left: 28rpx;
  margin-right: 0;
  padding: 6rpx 12rpx;
}

.solt-title .van-icon {
  margin-left: 14rpx;
}

.solt-title .van-icon::before {
  font-size: 34rpx;
}

.picker-icon .success {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #04C6A6;
}

.message-chat {
  display: flex;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.message-chat image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.message-chat input {
  background: #F5F6F8;
  border-radius: 6rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  line-height: 36rpx;
  margin: 26rpx 0rpx;
  flex: 1;
}

.message-chat button {
  font-size: 30rpx;
  font-family: PingFang SC;
  padding: 16rpx 38rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 40rpx;
  background: #04C6A6;
  border-radius: 6rpx;
  margin: 0rpx 18rpx;
}