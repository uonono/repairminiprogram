/* pages/my/profile/index.wxss */
page {
  background: #f2f2f2;
  position: relative;
  height: 100%;
}

.picker-title .van-cell {
  padding: 36rpx 34rpx !important;
  align-items: center;
  background: inherit;
}
.picker-title .van-cell::after{
  content: none !important;
}

.picker-title .van-cell__title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #1F1F1F;
  min-width: 30%;
  margin-right: 30rpx;
}

.picker-title .van-cell__value {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  line-height: 1.5;
}

.general-out-view {
  margin: 30rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
}

.general-out-view .picker-title image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.picker-icon {
  display: flex;
  align-items: center;
  height: 100%;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  justify-content: flex-end;
  line-height: 36rpx;
}

.picker-icon .van-icon {
  margin-left: 44rpx;
}

.picker-icon .van-icon-arrow:before {
  font-size: 24rpx;
}

.map-button .disable {
  background: #D8D8D8 !important;
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(168, 168, 168, 0.51) !important;
  border-radius: 36rpx;
}

.map-button {
  position: absolute;
  bottom: 32rpx;
  width: 100%;
  margin-bottom: 32rpx;
}

.map-button button {
  width: 90% !important;
  background: linear-gradient(141deg, #1FD7A5 0%, #00B9A9 100%);
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(168, 168, 168, 0.51);
  border-radius: 36rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  line-height: 42rpx;
  padding: 22rpx 0rpx;
  margin-top: 38rpx;
}

.input-picker .van-cell {
  padding: 0 !important;

}
.input-picker input {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  line-height: 1.5;
}