/* pages/my/profile/index.wxss */
page {
  background: #f2f2f2;
  min-height: 100%;
  height: auto;
  position: relative;
}


.general-int-view {
  margin-bottom: 24rpx;
}

.picker-title-first .van-cell {
  padding: 36rpx 34rpx !important;
  margin-bottom: 12rpx;
}

.picker-title-last .van-cell {
  padding: 22rpx 34rpx 40rpx 34rpx !important;
}

.picker-title .van-cell {
  padding: 22rpx 32rpx;
  background: inherit;
}
.imagae-video{
  width: 90rpx;
  height: 90rpx;
    right: 10rpx;
    bottom: 20rpx;
    z-index: 10;
    position: absolute;
}
.picker-title .van-cell__title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #1F1F1F;
}

.repair-textarea image{
  width: 40rpx;
  height: 45rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
.repair-textarea textarea {
  background: #F5F6F8;
  max-height: 210rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  line-height: 36rpx;
  position: relative;
  width: calc(100% - 48rpx);
  padding: 26rpx 14rpx;
  z-index: 0;
}
.picker-title .van-cell__value {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  line-height: 1.5;
}

.general-out-view {
  margin: 30rpx 24rpx;
  background: #fff;
  border-radius: 12rpx;
}

.general-out-view .picker-title image {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.picker-icon {
  display: flex;
  align-items: center;
  height: 100%;
  font-size: 24rpx;
  flex-wrap: wrap;
  font-family: PingFang SC;
  font-weight: 500;
  color: #969799;
  justify-content: flex-end;
  line-height: 36rpx;
}

.picker-icon .van-icon {
  margin-left: 44rpx;
}

.picker-icon .van-icon:before {
  font-size: 36rpx;
}

.map-button .disable {
  background: #D8D8D8 !important;
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(168, 168, 168, 0.51) !important;
  border-radius: 36rpx;
}

.map-button {
  width: 100%;
  margin-bottom: 32rpx;
  position: absolute;
  bottom: 38rpx;
}

.map-button button {
  width: 90% !important;
  background: linear-gradient(141deg, #1FD7A5 0%, #00B9A9 100%);
  box-shadow: 0rpx 4rpx 30rpx 0rpx rgba(168, 168, 168, 0.51);
  border-radius: 36rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  line-height: 42rpx;
  padding: 22rpx 0rpx;
}

.solt-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #1F1F1F;
}

.solt-title button {
  background: #04C6A6;
  border-radius: 6rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 36rpx;
  margin-left: 28rpx;
  margin-right: 0;
  padding: 6rpx 12rpx;
}

.solt-title .van-icon {
  margin-left: 14rpx;
}

.solt-title .van-icon::before {
  font-size: 34rpx;
}

.picker-icon .success {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #04C6A6;
}

.repair-textarea {
  margin: 26rpx 24rpx;
  display: block;
  padding-bottom: 30rpx;
}

.repair-textarea textarea {
  padding: 26rpx 24rpx;
  background: #F5F6F8;
  height: 210rpx !important;
  font-size: 28rpx;
  font-family: PingFang SC;
  line-height: 36rpx;
}
.general-block {
  height: 165rpx;
  display: block;
}