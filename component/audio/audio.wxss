/* component/audio/audio.wxss */
.audio-mask{
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100%; /*宽度设置为100%，这样才能使隐藏背景层覆盖原页面*/
  height: 100%;
  filter: alpha(opacity=100); /*设置透明度为100%*/
  opacity: 1; /*非IE浏览器下设置透明度为100%*/
  display: block;
  z-Index: 999;
}
.video-bottom {
  width: 100%;
  height: 100%;
}

.mask-content{
  position: absolute;
  border-radius: 50% 50% 0 0 !important;
  background: #fff !important;
  height: 200rpx;
  width: 100%;
  bottom: 0;
}
.image-button{
  color: #333;
  text-align: center;
  width: 100%;
  position: absolute;
  bottom: 7rpx;
  font-size: 18px;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  z-index: 1200;
}
.mask-video{
  position: absolute;
  z-index: 99999;
  width: 356rpx;
  height: 356rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  background-repeat: no-repeat;
  background-attachment: initial;
  background-origin: initial;
  background-clip: initial;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 24rpx;
  padding: 16rpx 0px;
  color: #fff;
}
.mask-video .mask-content-video{
  position: absolute;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  
}
